<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F1"
    android:orientation="vertical"
    android:scrollbarStyle="insideInset"
    tools:context=".SecondPage">
    <!--Header Section-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#F7F7F1"
            android:outlineSpotShadowColor="#F7F7F1"
            tools:ignore="UnusedAttribute">

            <TextView
                android:id="@+id/firsttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:text="Welcome back,"
                android:textColor="#827878"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/firsttext"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="Carolina Terner "
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            app:cardCornerRadius="150dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="100dp"
                android:layout_height="97dp"
                android:background="@mipmap/ic_launcher_round"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/yt" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <!--Search Bar type-->
    <androidx.cardview.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="120dp">

        <SearchView
            android:id="@+id/searchView"
            style="bold"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:iconifiedByDefault="false"
            android:queryHint="Try to find...." />

    </androidx.cardview.widget.CardView>
    <!--  Text View  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:text="Task-based explanation process"
        android:textColor="#060606"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="VisualLintBounds">

            <!-- Add multiple CardViews here -->
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="8dp"
                android:background="@drawable/dotted_border"
                android:backgroundTint="#F7F7F1"
                app:cardCornerRadius="30dp">

                <Button

                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_margin="21dp"
                    android:backgroundTint="#D2F36A"
                    android:text="@string/add_task"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"

                    />

                <TextView
                    android:layout_width="85sp"
                    android:layout_height="40sp"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="60sp"
                    android:text="@string/creatives_for_branging"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="25dp"

                >

                <Button

                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_margin="21dp"
                    android:backgroundTint="#F7F6F0"
                    android:text="@string/add_task"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"

                    />

                <TextView
                    android:layout_width="85sp"
                    android:layout_height="45sp"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="60sp"
                    android:text="@string/verification_process_with_team"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="30dp"

                >

                <Button

                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_margin="21dp"
                    android:backgroundTint="#F7F6F0"
                    android:text="@string/add_task"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"

                    />

                <TextView
                    android:layout_width="85sp"
                    android:layout_height="45sp"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="60sp"
                    android:text="@string/verification_process_with_team"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </HorizontalScrollView>
    <!--Dropdown method-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10sp"
            android:padding="10sp">

        </Spinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10sp"
            android:gravity=""
            android:padding="10sp"
            android:text="@string/see_all"
            android:textColor="#827878"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F7F7F1"
            android:outlineSpotShadowColor="#F7F7F1">

            <TextView
                android:id="@+id/firsttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:text="Document verification"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/firsttext"
                android:layout_marginTop="25dp"
                android:padding="5dp"
                android:text="3 min ago "
                android:textColor="#827878"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/addlist1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_circle_24"
            android:importantForAccessibility="no"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_add_24" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F7F7F1"
            android:outlineSpotShadowColor="#F7F7F1">

            <TextView
                android:id="@+id/firsttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:text="Newbie onboarding"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/firsttext"
                android:layout_marginTop="25dp"
                android:padding="5dp"
                android:text="5 days ago "
                android:textColor="#827878"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/addlist2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_circle_24"
            android:importantForAccessibility="no"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_add_24" />

    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottmnav"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:background="#FEFFFE"
        app:itemIconSize="35dp"
        app:menu="@menu/bottom_nav_menu"
        tools:ignore="VisualLintBottomNav" />
</LinearLayout>